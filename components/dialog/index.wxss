/* components/dialog/index.wxss */
.myDialog {
  z-index: 1001;
}

.myDialog .mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .4)
}

.myDialog .dialog {
  position: fixed;
  width: 80vw;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
}

.myDialog .dialog-title {
  font-size: 40rpx;
  /* font-weight: 600; */
  padding: 20rpx 40rpx;
  background-color: #F8F8F8;
}

.myDialog .dialog-content {
  padding: 40rpx;
  min-height: 100rpx;
}

.myDialog .dialog-footer {
  width: 100%;
  border-top: 1px solid #efefef;
  display: flex;
}

.myDialog .cancelBtn, .myDialog .confirmBtn {
  flex: 1;
  padding: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.myDialog .confirmBtn {
  color: #5FB878;
  border-left: 1px solid #efefef;
}

